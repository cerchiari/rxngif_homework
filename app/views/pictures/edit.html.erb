<h1>Edit an Existing Picture</h1>


<%= form_tag("http://localhost:3000/update_picture/#{@picture.id}", :method => "patch") do %>
  <div>
    <label for="the_caption">Caption:</label>
    <input id="the_caption" value="<%= @picture.caption %>" type="text" name="caption">
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <input id="image_url" value="<%= @picture.source %>" type="text" name="source">
  </div>
  <div>
    <input type="submit" value="Edit Picture">
  </div>
<% end %>
